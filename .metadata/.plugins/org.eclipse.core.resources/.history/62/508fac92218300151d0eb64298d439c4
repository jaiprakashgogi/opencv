#include <iostream>
#include "opencv2/highgui.hpp"
#include "opencv2/imgproc.hpp"

using namespace std;
using namespace cv;

int main() {
	Mat img;
	cout << "!!!Hello World!!!" << endl;
	VideoCapture cap;
	if (!cap.open(0)) {
		cout << "camera already open" << endl;
		return -1;
	}
	waitKey(100);
	while (1) {
		cap >> img;
		if( img.empty() ) break;
		imshow("window", img);
		if( waitKey(1) == 27 ) break;
	}

	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
