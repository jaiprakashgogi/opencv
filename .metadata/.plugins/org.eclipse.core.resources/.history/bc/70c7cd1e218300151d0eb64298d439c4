#include <iostream>
#include "opencv2/highgui.hpp"
#include "opencv2/imgproc.hpp"

using namespace std;
using namespace cv;

int main() {
	char key = 0;
	Mat img;
	cout << "!!!Hello World!!!" << endl;
	VideoCapture cap;
	if (!cap.open(0)) {
		return -1;
	} else {
		while (key != 27) {
			cap >> img;
			imshow("window", img);
			key = waitKey(30);
		}
	}
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
