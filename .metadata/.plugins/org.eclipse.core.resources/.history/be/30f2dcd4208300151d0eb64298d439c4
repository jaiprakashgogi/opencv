#include <iostream>
#include "opencv2/highgui.hpp"
#include "opencv2/imgproc.hpp"

using namespace std;
using namespace cv;

int main() {
/*	char key = 0;
	Mat img;
	cout << "!!!Hello World!!!" << endl;
